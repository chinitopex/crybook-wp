		<?php
			$feed_uri = get_option('codenitive_feed_uri');
			$feed_app = get_option('codenitive_feed_app');
			$feed_id = get_option('codenitive_feed_uri');
			$feed_email = "";
			$feed_email_boolean = get_option('codenitive_feed_email');
			$feed_email_text = "";
			$feed_uri_text = "";
			$feed_count_text = (get_option('codenitive_feed_enable') === 'yes' ? get_option('codenitive_feed_count') : '');
			
			if(!$feed_uri or $feed_uri == '') :
				$feed_uri = get_bloginfo('rss2_url');
			else :
				if($feed_app !== "google") :
					$feed_uri = 'http://feeds.feedburner.com/' . $feed_uri;
				else :
					$feed_uri = 'http://feedproxy.google.com/' . $feed_uri;
				endif;
			endif;
			
			$feed_uri_text = 'feed';
			
			
			if($feed_email_boolean == "yes") :
				$feed_email = 'http://'.($feed_app !== "google" ? 'www.feedburner.com/fb/a/emailverifySubmit' : 'feedburner.google.com/fb/a/mailverify').'?uri='.$feed_id.'&amp;loc=en_US';
				$feed_email_text = ' or e-mail';
			endif;
		?>
		<div id="sidebar" class="smallbox">
			<h3 class="closed"><?php echo ($feed_count_text != "" ? $feed_count_text." via " : ""); ?>Feed</h3>
			<p>
				<a href="#" id="feeds-a">You can get update via <?php echo $feed_uri_text.$feed_email_text; ?></a>.
			</p>
			
			<script type="text/javascript">
